{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Type check (mypy)",
      "type": "shell",
      "command": "mypy",
      "args": [
        "--pretty",
        "--show-error-codes",
        "--show-column-numbers",
        "--no-error-summary",
        "."
      ],
      "problemMatcher": {
        "owner": "python",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*\\.py):(\\d+):(\\d+):\\s*(error):\\s*(.*)\\s*\\[(.*)\\]$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5,
          "code": 6
        }
      },
      "group": "build"
    }
  ]
}
